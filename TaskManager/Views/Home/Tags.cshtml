@using System
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TaskManager.Models.TagModel
           
<nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0" style="padding-left: 2% !important;z-index: 10 !important;padding-top: 20px !important; padding-bottom: 20px !important; background-color: white;">
    <p class="display-3">
        Today @DateTime.Today.ToShortDateString() <small>@DateTime.Now.DayOfWeek</small>
    </p>
    <div class="row" style="padding-top: 1%; padding-left: 1%; display: -webkit-inline-box;">
        <p>
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal-2">Create</button>
    </div>
</nav>
  
    <div class="section" style="    padding-top: 20px;font-size: 17px;">
        <div class="container" style="width: 100%;">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr style="font-weight: bold">
                                <th>#</th>
                                <th>Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < ViewBag.TagsNum; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@ViewBag.Tags[i].Name</td>
                                    <td><a href="/Home/TagDelete/?id=@ViewBag.Tags[i].Id">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modal-2">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" action="/Home/TagCreate">

                    <div class="modal-body">
                        @Html.AntiForgeryToken()

                        @*@Html.TextBoxFor(model => model.Name, new { @class = "search-query form-control", placeholder = "Search" })*@
                        <input id="text_search" type="text" name="Name" class="form-control form-control-lg" placeholder="Name" />





                    </div>
                    <div class="modal-footer">
                        <div class="input-group-append">
                            <button class="btn  btn-primary" type="submit">Save</button>
                        </div>

                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
