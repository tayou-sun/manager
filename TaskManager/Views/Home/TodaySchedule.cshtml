                            <div class="agenda" style="font-weight: bold; padding-top: 2%;">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="upss">
                                        <thead style="font-size: 20px;font-weight: bold;">
                                            <tr>
                                                <th style="width: 200px; ">Plan</th>
                                                <th style="width: 200px;">Result</th>
                                                <th style="width: 50px;">Time</th>
                                                <th style="width: 200px;">Tag</th>

                                            </tr>
                                        </thead>
                                        <tbody style="font-weight: normal;">

                                            @for (int i = 0; i < (ViewBag.Task).Count; i++)
                                            {
                                                <tr>

                                                    <td class="agenda-date" style="width: 200px; font-size: 17px;word-wrap: break-word !important; max-width: 200px !important;">
                                                        <div class="agenda-date" style="white-space: pre-line;width: 100% !important;word-wrap: break-word;">@ViewBag.Task[i].PlanText</div>
                                                    </td>

                                                    <td class="agenda-date" style="font-size: 17px;word-wrap: break-word; width: 200px; max-width: 200px !important; ">
                                                        <div style="width: 100% !important; white-space: pre-line;display: block;" class="agenda-date s">@ViewBag.Task[i].ResultText</div>

                                                    </td>

                                                    <td class="agenda-date" style="font-size: 17px;word-wrap: break-word; width: 50px; max-width: 50px !important; ">
                                                        <div style="width: 100% !important;" class="agenda-date s">@ViewBag.Task[i].Time.ToString()</div>

                                                    </td>

                                                    <td class="sups" rowspan="1" style="font-size: 17px;word-wrap: break-word; width: 200px; max-width: 200px !important; ">
                                                        @*style="visibility: hidden; width:1px;"*@
                    <div style="width: 100%">
                        <div class="form-group">

                            <select style=" height: 40px;font-size: 17px;" class="form-control" id="exampleFormControlSelect1">
                                <option> </option>
                                @for (var j = 0; j < ViewBag.TagsNumber; j++)
                                {
                                    if ((@ViewBag.Task[i].Tag) != null && ViewBag.Tags[j].Name == (@ViewBag.Task[i].Tag).Name)
                                    {
                                        <option style="font-size: 17px;" selected>@ViewBag.Tags[j].Name</option>
                                    }
                                    else
                                    {

                                        <option style="font-size: 17px;">@ViewBag.Tags[j].Name</option>
                                    }

                                }
                            </select>
                        </div>

                    </div>


                    </td>



                    <td style="visibility: hidden; width:1px;display: none;" class="agenda-date" class="active" rowspan="1">@ViewBag.Task[i].Id</td>


                    </tr>


                    }

                    </tbody>
                    </table>
                </div>
            </div>
