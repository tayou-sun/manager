        <div class="events">
            <ul>
                @{int i = 0;}
                @foreach (var week in ViewBag.Week)
                {
                    i++;
                    <li class="events-group" style="width:16%;">
                        <div class="top-info"><span>@week</span></div>

                        <ul>
                            @foreach (var task in ViewBag.Tasks)
                            {
                                if (task.CreateDate != DateTime.MinValue)
                                {
                                    if (task.CreateDate.DayOfWeek.ToString() == week)
                                    {
                                        <li class="single-event" data-start="11:00" data-end="12:30" data-content="event-rowing-workout" data-event="event-2">

                                            @*<li class="single-event" data-start="3:00" data-end="5:00" data-content="event-abs-circuit" data-event="event-1">*@
                                            <a href="#0">
